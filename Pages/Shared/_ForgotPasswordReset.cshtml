@model LoginSystem.Pages.ForgotPasswordModel.PasswordInputModel

<div class="form-group mb-4">
    <p class="form-text mb-4" style="text-align: center; font-size: medium; margin-top: -20px" >Nhập mật khẩu mới và xác nhận để hoàn tất.</p>
    <form id="forgotPasswordResetForm" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" name="Email" value="@Model.Email" />
        <input type="hidden" name="Code" value="@Model.Code" />
        <div class="form-group mb-4 password-container">
            <label for="newPassword" class="form-label">Mật khẩu mới</label>
            <input type="password" id="newPassword" name="NewPassword" class="form-control" placeholder="Nhập mật khẩu mới" required minlength="6" />
            <i class="fas fa-eye password-toggle" data-target="newPassword"></i>
            <span id="newPasswordError" class="text-danger"></span>
        </div>
        <div class="form-group mb-4 password-container">
            <label for="confirmPassword" class="form-label">Xác nhận mật khẩu</label>
            <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu mới" required minlength="6" />
            <i class="fas fa-eye password-toggle" data-target="confirmPassword"></i>
            <span id="confirmPasswordError" class="text-danger"></span>
        </div>
        <div class="button-group">
            <button type="submit" class="btn btn-primary" id="resetPasswordButton">
                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                Đặt lại mật khẩu
            </button>
            <a asp-page="/Login" class="btn btn-outline-secondary">Quay lại đăng nhập</a>
        </div>
    </form>
</div>