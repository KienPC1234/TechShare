@model LoginSystem.Pages.ForgotPasswordModel.EmailInputModel

<div class="form-group mb-4">
    <p class="form-text mb-4">Nhập địa chỉ email của bạn để nhận mã đặt lại mật khẩu.</p>
    <form id="forgotPasswordEmailForm" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <div class="form-group mb-4">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="Email" class="form-control" placeholder="Nhập email của bạn" value="@Model.Email" required />
            <span id="emailError" class="text-danger"></span>
        </div>
        <div class="captcha-container">
            @Html.RenderCaptchaV2()
        </div>
        <div class="button-group">
            <button type="submit" class="btn btn-primary" id="sendCodeButton">
                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                Gửi mã
            </button>
            <a asp-page="/Login" class="btn btn-outline-secondary">Quay lại đăng nhập</a>
        </div>
    </form>
</div>