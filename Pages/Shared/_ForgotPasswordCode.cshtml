@model LoginSystem.Pages.ForgotPasswordModel.CodeInputModel

<div class="form-group mb-4">
    <p class="form-text mb-4" style="text-align: center; font-size: medium; margin-top: -20px">Nhập mã xác minh đã được gửi đến email của bạn.</p>
    <form id="forgotPasswordCodeForm" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" name="Email" value="@Model.Email" />
        <div class="form-group mb-4">
            <label for="code" class="form-label">Mã xác minh</label>
            <input type="text" id="code" name="Code" class="form-control code-input" placeholder="  Nhập mã 6 chữ số" maxlength="6" pattern="[A-Za-z0-9]{6}" required />
            <span id="codeError" class="text-danger"></span>
        </div>
        <div class="button-group">
            <button type="submit" class="btn btn-primary" id="verifyCodeButton">
                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                Xác minh
            </button>
            <a asp-page="/ForgotPassword" class="btn btn-outline-secondary">Quay lại</a>
        </div>
    </form>
</div>