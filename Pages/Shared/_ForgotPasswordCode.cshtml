@model LoginSystem.Pages.ForgotPasswordModel.CodeInputModel

<div class="card shadow-lg border-0">
    <div class="card-header bg-gradient-primary text-white">
        <h2 class="mb-0 fw-semibold">Xác minh mã</h2>
    </div>
    <div class="card-body p-4">
        <p class="mb-4">Nhập mã xác minh đã được gửi đến email của bạn.</p>
        <form id="forgotPasswordCodeForm" class="needs-validation" novalidate>
            <input type="hidden" name="Email" value="@Model.Email" />
            <div class="mb-4">
                <label for="code" class="form-label fw-medium">Mã xác minh</label>
                <input type="text" id="code" name="Code" class="form-control form-control-lg text-center" placeholder="Nhập mã 6 chữ số" maxlength="6" pattern="\d{6}" required />
                <span id="codeError" class="text-danger mt-1 d-block"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg transition-all" id="verifyCodeButton">
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    Xác minh
                </button>
                <a asp-page="/ForgotPassword" class="btn btn-outline-secondary btn-lg transition-all">Quay lại</a>
            </div>
        </form>
    </div>
</div>