@page
@model LoginSystem.Pages.EditUserModel
@{
    ViewData["Title"] = "Edit User";
}

<h1>Chỉnh sửa thông tin người dùng</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Input.Username"></label>
        <input asp-for="Input.Username" class="form-control" />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.DisplayName"></label>
        <input asp-for="Input.DisplayName" class="form-control" />
        <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Avatar">Avatar</label>
        <input asp-for="Input.Avatar" type="file" class="form-control" accept=".jpg,.jpeg,.png,.webp" />
        <span asp-validation-for="Input.Avatar" class="text-danger"></span>
        @if (!string.IsNullOrEmpty(Model.CurrentUser?.AvatarUrl))
        {
            <img src="@Model.CurrentUser.AvatarUrl" alt="Avatar" width="100" class="mt-2" />
        }
    </div>
    @if (User.IsInRole("SuperAdmin"))
    {
        <div class="form-group">
            <label>Roles</label>
            @foreach (var role in Model.AvailableRoles!)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="Input.SelectedRoles" value="@role"
                    @(Model.Input!.SelectedRoles != null && Model.Input.SelectedRoles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label">@role</label>
                </div>
            }
        </div>
    }
    <button type="submit" class="btn btn-primary mt-3">Save</button>
    <a asp-page="/Dashboard" asp-route-pageIndex="1" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}