@model LoginSystem.Pages.Organization.DetailsModel
<div class="modal-body">
    @if (!string.IsNullOrEmpty(Model.Organization?.Terms))
    {
        @Html.Raw(Model.Organization.Terms)
    }
    else
    {
        <p class="text-muted">Chưa có điều khoản cho tổ chức này.</p>
    }
</div>
<div class="modal-footer bg-light">
    <form method="post" asp-page-handler="Join" asp-route-slug="@Model.Organization?.Slug" id="joinForm" class="w-100">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="termsCheckbox" asp-for="JoinInput.TermsAccepted" required />
                <label class="form-check-label" for="termsCheckbox">
                    Tôi đã đọc và đồng ý với điều khoản trên
                </label>
            </div>
            <span asp-validation-for="JoinInput.TermsAccepted" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success w-100" id="joinButton" disabled>
            <i class="fas fa-user-plus"></i> Xác Nhận Tham Gia
        </button>
    </form>
</div>