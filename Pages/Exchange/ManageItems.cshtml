@page "/Exchange/ManageItems"
@model LoginSystem.Pages.Exchange.ManageItemsModel
@using Microsoft.AspNetCore.Identity
@using LoginSystem.Models
@inject UserManager<ApplicationUser> UserManager

<div class="container mt-4">
    <h1 class="mb-4">Quản lý mặt hàng của bạn</h1>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">@Model.SuccessMessage</div>
    }

    @if (Model.Items.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tiêu đề</th>
                        <th>Danh mục</th>
                        <th>Số lượng</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td><a asp-page="/Exchange/Item" asp-route-id="@item.Id">@item.Title</a></td>
                            <td>@(item.Category?.Name ?? "Không có")</td>
                            <td>@item.QuantityAvailable</td>
                            <td>@(item.IsPrivate ? "Riêng tư" : "Công khai")</td>
                            <td>
                                <a asp-page="/Exchange/EditItem" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Chỉnh sửa</a>
                                <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal_@item.Id">Xóa</button>
                                <div class="modal fade" id="deleteModal_@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel_@item.Id" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel_@item.Id">Xác nhận xóa</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Bạn có chắc muốn xóa mặt hàng <strong>@item.Title</strong>?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-danger">Xóa</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="alert alert-info">Bạn chưa đăng mặt hàng nào.</p>
    }

    <div class="mt-4">
        <a asp-page="/Exchange/CreateItem" class="btn btn-primary">Tạo mặt hàng mới</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}